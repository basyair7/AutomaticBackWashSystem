#ifndef bootbutton_hpp
#define bootbutton_hpp

#include <Arduino.h>
#include <pushbutton.h>
#include "spiffs"
#include "variable.h"

class BootButton {
public:
    BootButton(uint8_t pin, uint8_t mode) : bootBtn(pin, mode) { }
    
    void begin() {
        bootBtn.init();
        wifiState = AP_MODE_STATE;
    }
    
    void WiFiMode() {
        currentButtonState = bootBtn.digitalReadPushButton();
        if (currentButtonState != lastButtonState)
            buttonChange = true;

        if (buttonChange) {
            if (currentButtonState == LOW) {
                wifiState = !wifiState;
                fs_config->changeConfigState("WIFI_AP", wifiState);
                TSprintln(F("\nChange Mode WiFi : "));
                TSprintln(wifiState ? "MODE_AP_STA" : "MODE_AP");
                delay(2000);
                ESP.restart();
            }
            buttonChange = false;
        }
        lastButtonState = currentButtonState;
    }
    
private:
    PushButtonDigital bootBtn;
    SPIFFSProgram* fs_config = new SPIFFSProgram;
    bool currentButtonState = false;
    bool lastButtonState    = false;
    bool buttonChange       = false;
    bool wifiState          = false;
};

#endif